version: '3'

services:

  fluentd:
    image: 192.168.2.18:5000/fluentd-custom:v1
    networks:
      - admin-net
    volumes:
      - "./logs/:/fluentd/log/"
    ports:
      - "24224:24224"
      - "24224:24224/udp"
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [ node.role == manager ]

  
  loggerApp:
    image: 192.168.2.18:5000/logger:v1
    networks:
      - admin-net
    logging:
      driver: "fluentd"
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [ node.role == worker ]

  elasticsearch:
    image: elasticsearch
    ports:
      - "9200:9200"
    networks:
      - admin-net
    environment:
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    logging:
        driver: "json-file"
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

  kibana:
    image: kibana
    ports:
      - "8888:5601"
    networks:
      - admin-net
    environment:
      - 'ELASTICSEARCH_URL=http://elasticsearch:9200'
    logging:
        driver: "json-file"
        options:
           max-size: 10M
           max-file: 1        
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

networks:
  "admin-net":
    external: true
